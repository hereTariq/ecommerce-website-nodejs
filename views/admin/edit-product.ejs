<%- include ('../partials/header') %>
    <%- include ('../partials/navigation') %>

        <main class="grid place-items-center my-10">
            <form action="/admin/<% if(editing) { %>edit-product<% } else { %>add-product<% } %>" method="post"
                enctype="multipart/form-data"
                class="bg-gray-100 shadow-md shadow-gray-500 m-4 w-11/12 px-6 sm:min-h-screen py-10 sm:w-4/5 md:w-1/2 flex flex-col space-y-6 items-center">
                <h1 class="text-2xl font-bold text-indigo-500 uppercase">
                    <% if(editing) { %>Update Product<% } else { %>Add Product<% } %>
                </h1>
                <%- include ('../partials/messages') %>
                    <div class="w-full space-y-2.5 flex flex-col">
                        <label for="title">Title</label>
                        <input type="text" name="title" id="title"
                            class="py-2 px-4 bg-gray-200 outline-none focus:ring-1 focus:ring-gray-300"
                            value="<% if (editing || hasError) { %><%= product.title %><% } %>" required />
                    </div>
                    <div class="w-full space-y-2.5 flex flex-col">
                        <label for="price">Price</label>
                        <input type="number" name="price" id="number" step="0.01"
                            class="py-2 px-4 bg-gray-200 outline-none focus:ring-1 focus:ring-gray-300"
                            value="<% if (editing || hasError) { %><%= product.price %><% } %>" required />
                    </div>
                    <div class="w-full space-y-2.5 flex flex-col">
                        <label for="description">Description</label>
                        <textarea name="description" id="description" cols="20" rows="4"
                            class="py-2 px-4 bg-gray-200 outline-none focus:ring-1 focus:ring-gray-300"
                            required><% if(editing || hasError) { %> <%= product.description %><% }%></textarea>
                    </div>
                    <div class="w-full space-y-2.5 flex flex-col">
                        <label for="image" class="">Choose Image</label>
                        <input type="file" name="image" id="image"
                            class="file:py-2 file:px-4 file:cursor-pointer file:border-none file:mr-4 file:bg-gray-200"
                            <% if(!editing) { %>required<% } %>/>
                    </div>
                    <div class="w-full md:w-auto">
                        <% if (editing) { %>
                            <input type="hidden" name="prodId" value="<%= product.id %>">
                            <% } %>
                                <input type="submit"
                                    value="<% if (editing) { %>Update Product<% } else { %>Add Product<% } %>"
                                    class="bg-indigo-500 px-6 py-3 cursor-pointer text-white rounded hover:bg-transparent hover:ring hover:ring-indigo-500 hover:text-indigo-500 transition-all duration-400 hover:font-bold" />
                    </div>
            </form>
        </main>

        <%- include ('../partials/footer') %>