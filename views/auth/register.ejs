<%- include ('../partials/header') %>
    <%- include ('../partials/navigation') %>

        <div class="my-20 md:mt-10 flex flex-col  justify-center items-center">

            <form action="/auth/signup" method="post"
                class="md:w-1/2 md:h-screen md:flex md:flex-col md:justify-around w-[90%] myshadow py-4 px-8 space-y-4 rounded-md md:px-16">
                <h1 class="text-4xl font-bold tracking-widest text-center">Register</h1>
                <%- include ('../partials/messages') %>

                    <div class="flex flex-col space-y-1">
                        <label class="text-xl" for="name">Name</label>
                        <input placeholder="Your Name" type="text" name="name" id="name"
                            class="border border-gray-400 rounded px-4 py-1 outline-none text-lg text-gray-800 focus:ring-1 focus:ring-blue-200"
                            required value="<%= oldInput.name %>">
                    </div>
                    <div class="flex flex-col space-y-1">
                        <label class="text-xl" for="email">Email</label>
                        <input placeholder="Email" type="email" name="email" id="email"
                            class="border border-gray-400 rounded px-4 py-1 outline-none text-lg text-gray-800 focus:ring-1 focus:ring-blue-200"
                            required value="<%= oldInput.email %>">
                    </div>
                    <div class="flex flex-col space-y-1 relative">
                        <label class="text-xl" for="password">Password</label>
                        <input placeholder="" type="password" name="password" id="password"
                            class="border border-gray-400 rounded px-4 py-1 outline-none text-lg text-gray-800 focus:ring-1 focus:ring-blue-200"
                            required value="<%= oldInput.password %>">
                        <img src="/images/websiteImages/eye-slash-regular.svg" id="eye" alt="eye"
                            class="h-6 w-5 absolute right-2 md:top-9 top-8 cursor-pointer">
                    </div>
                    <div class="flex flex-col space-y-1">
                        <label class="text-xl" for="password2">Confirm Password</label>
                        <input placeholder="" type="password" name="password2" id="password2"
                            class="border border-gray-400 rounded px-4 py-1 outline-none text-lg text-gray-800 focus:ring-1 focus:ring-blue-200"
                            required value="<%= oldInput.password2 %>">
                    </div>
                    <div class="">
                        <input type="submit" value="Register"
                            class="w-full cursor-pointer bg-purple-600 text-white px-4 py-2 font-extrabold">
                    </div>
                    <div class=" text-center text-xl pb-4">
                        <p class="w-full mr-auto">Have an Account? <a href="/auth/login"
                                class="hover:underline text-blue-600">Login</a></p>
                    </div>
            </form>
        </div>

        <%- include ('../partials/footer') %>