<%- include ('../partials/header') %>
    <%- include ('../partials/navigation') %>


        <div class="mt-20 md:my-10 flex flex-col  justify-center items-center">
            <form action="/auth/login" method="post"
                class="md:w-1/2 w-[90%] myshadow px-8 py-4 space-y-4 rounded-md md:px-16">
                <h1 class="text-2xl font-bold text-center my-6 ">Login to your account</h1>
                <%- include ('../partials/messages') %>
                    <div class="flex flex-col space-y-1">
                        <label class="text-xl" for="email">Email</label>
                        <input type="email" name="email" id="email"
                            class="border border-gray-400 rounded px-4 py-1 outline-none text-lg text-gray-800 focus:ring-1 focus:ring-blue-200"
                            value="<%= oldInput.email %>" required>
                    </div>
                    <div class="flex flex-col space-y-1 relative">
                        <label class="text-xl" for="password">Password</label>
                        <input placeholder="" type="password" name="password" id="password"
                            class="border border-gray-400 rounded px-4 py-1 outline-none text-lg text-gray-800 focus:ring-1 focus:ring-blue-200"
                            value="<%= oldInput.password %>" required>
                        <img src="/images/websiteImages/eye-slash-regular.svg" id="eye" alt="eye"
                            class="h-6 w-5 absolute right-2 md:top-9 top-8 cursor-pointer">
                    </div>
                    <div class="md:grid md:place-items-center">
                        <input type="submit" value="Login"
                            class="w-full md:w-auto cursor-pointer rounded bg-purple-600 text-white px-4 py-2 font-extrabold">
                    </div>
                    <div class=" text-center text-lg pb-4">
                        <p class="w-full">New Here? <a href="/auth/signup"
                                class="hover:underline text-blue-600">Register</a></p>
                    </div>
            </form>
        </div>
        <%- include ('../partials/footer') %>