<%- include ('../partials/header') %>
    <%- include ('../partials/navigation') %>

        <main class="container mx-auto">
            <div class="flex flex-col md:flex-row md:justify-center md:items-center m-4 md:mt-8 space-y-3 md:gap-x-10">
                <div class="md:w-1/2">
                    <img src="/<%= product.image %>" alt="<%= product.title %>" class="md:w-full">
                </div>
                <div class="space-y-4 md:flex md:flex-col md:justify-between">
                    <h1 class="text-2xl font-bold text-center md:text-left">
                        <%= product.title %>
                    </h1>
                    <div class="flex space-x-20 text-xl">
                        <h2 class="">Price: </h2>
                        <h1 class="font-bold">
                            $<%= product.price %>
                        </h1>
                    </div>
                    <div class="flex space-x-4">
                        <h2 class="text-xl">Description: </h2>
                        <h4 class="text-gray-700">
                            <%= product.description %>
                        </h4>
                    </div>
                    <button
                        class="flex items-center justify-center w-full md:w-1/2 mx-auto px-2 py-2 my-4 font-medium tracking-wide text-white capitalize transition-colors duration-200 transform bg-gray-800 rounded-md hover:bg-gray-700 focus:outline-none focus:bg-gray-700">
                        <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 mx-1" viewBox="0 0 20 20"
                            fill="currentColor">
                            <path
                                d="M3 1a1 1 0 000 2h1.22l.305 1.222a.997.997 0 00.01.042l1.358 5.43-.893.892C3.74 11.846 4.632 14 6.414 14H15a1 1 0 000-2H6.414l1-1H14a1 1 0 00.894-.553l3-6A1 1 0 0017 3H6.28l-.31-1.243A1 1 0 005 1H3zM16 16.5a1.5 1.5 0 11-3 0 1.5 1.5 0 013 0zM6.5 18a1.5 1.5 0 100-3 1.5 1.5 0 000 3z" />
                        </svg>
                        <span class="mx-1">Add to cart</span>
                    </button>
                </div>
            </div>
        </main>

        <%- include ('../partials/footer') %>